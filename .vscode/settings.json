{
  // Git 관련 설정
  "git.enableSmartCommit": true, // Git 스마트 커밋 활성화
  "git.autofetch": true, // Git 원격에서 자동으로 최신 변경 사항 가져오기
  "git.confirmSync": false, // 동기화 할 때마다 확인 메시지 표시 안 함

  // 기타 설정
  "keyboard.touchbar.enabled": false, // 터치 바에서 키보드 관련 동작 비활성화
  "workbench.iconTheme": "material-icon-theme", // 사용할 아이콘 테마 설정
  "terminal.integrated.enableMultiLinePasteWarning": false, // 터미널에 여러 줄 붙여넣을 때 경고 표시 안 함
  "explorer.confirmDragAndDrop": false, // 파일 탐색기에서 드래그 앤 드롭할 때 확인 메시지 표시 안 함
  "explorer.confirmDelete": false, // 파일 탐색기에서 파일 삭제할 때 확인 메시지 표시 안 함

  // 에디터 관련 설정
  "editor.multiCursorModifier": "ctrlCmd", // Ctrl (또는 Cmd) 키를 사용하여 여러 커서 추가
  "editor.wordWrap": "on", // 자동 단어 줄 바꿈 활성화
  "editor.tabSize": 4, // 탭의 기본 너비 설정
  "editor.rulers": [80, 100], // 80과 100 문자에서 눈금선 설정
  "editor.formatOnSave": true, // 저장 시 자동 포맷팅 활성화
  "editor.defaultFormatter": "vscode.typescript-language-features", // vscode.typescript-language-features를 기본 포맷터로 설정
  "editor.stickyScroll.enabled": true, // 스티키 스크롤 활성화 (에디터 뷰포트에서 줄이 벗어나지 않게 함)
  "editor.insertSpaces": true, // 탭 대신 공백 삽입
  "editor.renderWhitespace": "all", // 모든 공백 문자 표시

  // 파일 관련 설정
  "files.trimTrailingWhitespace": true, // 저장 시 마지막에 공백 제거
  "files.insertFinalNewline": true, // 파일 끝에 새 줄 추가
  "files.associations": {
    "*.tsx": "typescriptreact" // .tsx 파일을 typescriptreact로 연결
  },

  // 언어별 설정
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // GitHub 및 GitLens 설정
  "githubPullRequests.createOnPublishBranch": "never", // 브랜치를 게시할 때 자동으로 풀 요청 생성 안 함
  "githubPullRequests.pullBranch": "never", // 특정 브랜치로 자동 풀 안 함
  "git.ignoreRebaseWarning": true, // 리베이스 경고 무시

  // ESLint 설정
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true // 저장 시 ESLint를 사용하여 모든 문제 해결
  },
  "eslint.validate": [
    // ESLint 검증에 사용할 언어 유형 지정
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // 기타...
  "workbench.editor.enablePreview": false, // 에디터 미리보기 모드 비활성화
  "github.copilot.enable": {
    "*": true, // 모든 언어에 대해 GitHub CoPilot 활성화
    "plaintext": false,
    "markdown": false,
    "scminput": false
  },
  "editor.inlineSuggest.enabled": true // 인라인 제안 활성화
}
